datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

model Project {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  title         String?
  description   String?
  image         Json?
  url           String?
  projectMedias ProjectMedia[]
}

model Skill {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  name      String?
  level     EnumSkillLevel?
}

model ContactForm {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  email     String?
  message   String?
}

model AppUser {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  username  String?
  email     String?
  password  String?
  role      EnumAppUserRole?
}

model OurTeam {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     Json?
  bio       String?
  name      String?
  position  String?
}

model HeroSlider {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  heading    String?
  buttonText String?
  buttonLink String?
  image      Json?
  subHeading String?
}

model Testimonial {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  content     String?
  clientImage Json?
  clientName  String?
}

model ContactDetails {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String?
  phone     String?
  email     String?
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
}

model ProjectMedia {
  id          String                     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @updatedAt
  description String?
  mediaType   EnumProjectMediaMediaType?
  mediaUrl    Json?
  project     Project?                   @relation(fields: [projectId], references: [id])
  projectId   String?                    @db.ObjectId
}

enum EnumSkillLevel {
  Option1
}

enum EnumAppUserRole {
  Option1
}

enum EnumProjectMediaMediaType {
  Option1
}
